<h1>Listing students</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Quote</th>
    <th>Bio</th>
    <th>Work</th>
    <th>Github</th>
    <th>Treehouse</th>
    <th>Codeschool</th>
    <th>Coderwall</th>
    <th>Twitter</th>
    <th>Linkedin</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td><%= student.name %></td>
    <td><%= student.quote %></td>
    <td><%= student.bio %></td>
    <td><%= student.work %></td>
    <td><%= student.github %></td>
    <td><%= student.treehouse %></td>
    <td><%= student.codeschool %></td>
    <td><%= student.coderwall %></td>
    <td><%= student.twitter %></td>
    <td><%= student.linkedin %></td>
    <td><%= link_to 'Show', student %></td>
    <td><%= link_to 'Edit', edit_student_path(student) %></td>
    <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

